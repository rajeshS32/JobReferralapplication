@model IEnumerable<JobReferralapplication.Models.referredjob>

@{
    ViewBag.Title = "Index";
}

<div style="color:white; padding-top:50px; padding-left:20px">
    <p>
        @Html.ActionLink("Create New", "Create", "", new { style = "color:crimson ;padding:10px;" })
    </p>
    <table class="table" style="color:white;">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.referredto)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.jobid)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.referredon)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.comments)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.referredto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.jobid)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.referredon)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.comments)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.jobrefernceid }) |
                    @Html.ActionLink("Details", "Details", new { id = item.jobrefernceid }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.jobrefernceid })
                </td>
            </tr>
        }

    </table>
</div>